<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@null"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="@dimen/textsize_40px"
        android:textColor="@color/color_monitor_time"
        android:layout_gravity="center_horizontal"
        android:id="@id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25.0dip"
        android:text="- -" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@id/rlat_monitor"
            android:layout_width="330.0dip"
            android:layout_height="330.0dip">

            <com.moral.airtree.widget.MyCircleView
                android:id="@id/my_circle"
                android:visibility="gone"
                android:layout_width="330.0dip"
                android:layout_height="330.0dip"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="30.0dip"
                android:paddingBottom="30.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:textSize="@dimen/textsize_40px"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@id/tv_monitortype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="5.0dip" />

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="70.0sp"
                        android:textColor="@color/black"
                        android:id="@id/tv_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="20.0sp"
                        android:textColor="@color/black"
                        android:id="@id/tv_rightdanwei"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:textSize="@dimen/textsize_40px"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@id/tv_bottomdanwei"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>