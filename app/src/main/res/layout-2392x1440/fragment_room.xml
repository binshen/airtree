<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@null"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:layout_marginBottom="10.0dip">

        <ImageView
            android:id="@id/iv_electric_value"
            android:layout_width="35.0dip"
            android:layout_height="12.0dip" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/lay_main_center"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.65">

        <!--
        <TextView
            android:textSize="50.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/tv_air_quality"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:text="- -"
            android:layout_weight="0.3" />
        -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:layout_marginTop="-35.0dip">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/iv_main_image"
                android:layout_width="0.0dip"
                android:layout_height="90.0dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:textSize="70.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/tv_air_quality"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="- -"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_light_image"
                android:layout_width="0.0dip"
                android:layout_height="90.0dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginTop="-20.0dip"
            android:layout_weight="0.5">

            <TextView
                android:textSize="90.0sp"
                android:textColor="@color/white"
                android:id="@id/tv_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- -"
                android:layout_centerHorizontal="true" />

            <TextView
                android:textSize="15.0sp"
                android:textColor="@color/white"
                android:id="@id/tv_main_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@id/tv_main"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/tv_suggest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="35.0dip"
        android:paddingBottom="35.0dip"
        android:layout_width="fill_parent"
        android:layout_height="130.0dip">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@id/rl_pm25"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:textColor="@color/white"
                    android:id="@id/tv_pm25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monitor_pm"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:textColor="@color/white"
                    android:id="@id/tv_pm25_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- -"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <View
                android:background="@color/white"
                android:layout_width="0.5dip"
                android:layout_height="fill_parent" />

            <RelativeLayout
                android:id="@id/rl_temperature"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:textColor="@color/white"
                    android:id="@id/tv_temperature2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monitor_temperature"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:textColor="@color/white"
                    android:id="@id/tv_temperature2_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- -"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <View
                android:background="@color/white"
                android:layout_width="0.5dip"
                android:layout_height="fill_parent" />

            <RelativeLayout
                android:id="@id/rl_humidity"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:textColor="@color/white"
                    android:id="@id/tv_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monitor_humidity"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:textColor="@color/white"
                    android:id="@id/tv_humidity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- -"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <View
                android:background="@color/white"
                android:layout_width="0.5dip"
                android:layout_height="fill_parent" />

            <RelativeLayout
                android:id="@id/rl_formaldehyde"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:textColor="@color/white"
                    android:id="@id/tv_formaldehyde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monitor_formaldehyde"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:textColor="@color/white"
                    android:id="@id/tv_formaldehyde_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- -"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>