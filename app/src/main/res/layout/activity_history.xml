<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/lay_title" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="0.55">

            <TextView
                android:textSize="@dimen/textsize_28px"
                android:textColor="@color/hintcolor"
                android:gravity="center"
                android:id="@id/tv_history_date"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />

            <RelativeLayout
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <TextView
                    android:textSize="78.0sp"
                    android:textColor="@color/btnpress"
                    android:id="@id/tv_purificationadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:textSize="18.0sp"
                    android:textColor="@color/btnpress"
                    android:id="@id/tv_purificationadd_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mg"
                    android:layout_toRightOf="@id/tv_purificationadd"
                    android:layout_alignBaseline="@id/tv_purificationadd"
                    android:layout_alignBottom="@id/tv_purificationadd" />
            </RelativeLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <TextView
                    android:textSize="@dimen/textsize_32px"
                    android:gravity="center"
                    android:background="@drawable/shape_bg"
                    android:paddingLeft="23.0dip"
                    android:paddingTop="10.0dip"
                    android:paddingRight="23.0dip"
                    android:paddingBottom="10.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cleanallair" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@color/fengeline2"
            android:layout_width="fill_parent"
            android:layout_height="0.5500001dip" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="0.2">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:gravity="bottom"
                    android:id="@id/tv_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:text="- -"
                    android:layout_weight="1.0" />

                <TextView
                    android:textSize="18.0sp"
                    android:gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="5.0dip"
                    android:text="@string/monitor_pm"
                    android:layout_weight="1.0" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:gravity="bottom"
                    android:id="@id/tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:text="- -"
                    android:layout_weight="1.0" />

                <TextView
                    android:textSize="18.0sp"
                    android:gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="5.0dip"
                    android:text="@string/monitor_temperature"
                    android:layout_weight="1.0" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:gravity="bottom"
                    android:id="@id/tv_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:text="- -"
                    android:layout_weight="1.0" />

                <TextView
                    android:textSize="18.0sp"
                    android:gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="5.0dip"
                    android:text="@string/monitor_humidity"
                    android:layout_weight="1.0" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:gravity="bottom"
                    android:id="@id/tv_formaldehyde"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:text="- -"
                    android:layout_weight="1.0" />

                <TextView
                    android:textSize="18.0sp"
                    android:gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="5.0dip"
                    android:text="@string/monitor_formaldehyde"
                    android:layout_weight="1.0" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="@mipmap/bg_down"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="0.2">

            <TextView
                android:textSize="@dimen/textsize_28px"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="25.0dip"
                android:text="@string/filterlife"
                android:drawableLeft="@mipmap/lx_icon"
                android:drawablePadding="8.0dip" />

            <ProgressBar
                android:layout_gravity="center_vertical"
                android:id="@id/pb"
                android:background="@drawable/shape_progressbar"
                android:layout_width="fill_parent"
                android:layout_height="4.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_marginRight="10.0dip"
                android:max="100" style="@style/StyleProgressBar" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>