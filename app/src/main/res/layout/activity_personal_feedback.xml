<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/lay_title" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5.0dip">

        <LinearLayout
            android:orientation="vertical"
            android:background="#fff2f2f2"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="0.35">

            <EditText
                android:textSize="@dimen/textsize_28px"
                android:textColor="@color/etcolor"
                android:textColorHint="@color/hintcolor"
                android:gravity="top"
                android:id="@id/et_feedback"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:hint="@string/input_content"
                android:layout_weight="0.9" />

            <TextView
                android:textSize="@dimen/textsize_22px"
                android:textColor="@color/listtextcolor"
                android:layout_gravity="right"
                android:id="@id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_weight="0.09" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="0.65">

            <Button
                android:textColor="@color/btntextnormal"
                android:id="@id/btn_commit"
                android:background="@mipmap/button_bg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70.0dip"
                android:text="@string/commit" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>